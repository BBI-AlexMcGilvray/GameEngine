#version 450 core
			
// values per vertex
layout(location = 0) in vec3 vPosition;

// Values that stay constant for the whole mesh
uniform vec4 modColor;

// values to return
out vec4 Color;
out smooth float CameraFacingRatio;

void main()
{
    Color = modColor;
    CameraFacingRatio = 0.0;
    
    gl_Position = vec4(vPosition, 1.0);
}